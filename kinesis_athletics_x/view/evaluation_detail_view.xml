    <record id="view_kinesis_athletics_evaluation_detail_normal_tree" model="ir.ui.view">
        <field name="name">kinesis_athletics.evaluation_detail.normal.tree</field>
        <field name="model">kinesis_athletics.evaluation_detail</field>
        <field name="inherit_id" ref="kinesis_athletics.view_kinesis_athletics_evaluation_detail_tree"/>
        <field name="arch" type="xml">
            <tree string="evaluation_detail" position="replace">
                <tree string="evaluation_detail" create="false" colors="black:result==0.0;black:state==False;black:state=='none';blue:state=='superior';red:state=='alert';green:state=='ideal'">
                    <field name="state" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="test_id"/>
                    <field name="result"/>
                    <field name="date"/>
                    <field name="company_id"/>
                    <field name="group_id"/>
                </tree>
            </tree>
        </field>
    </record>

    <record id="view_kinesis_athletics_evaluation_detail_normal_form" model="ir.ui.view">
        <field name="name">kinesis_athletics.evaluation_detail.normal.form</field>
        <field name="model">kinesis_athletics.evaluation_detail</field>
        <field name="inherit_id" ref="kinesis_athletics.view_kinesis_athletics_evaluation_detail_form"/>
        <field name="arch" type="xml">
            <group position="replace">
                <group>
                    <field name="partner_id"/>
                    <field name="test_id"/>
                    <field name="result"/>
                </group>
                <group>
                    <field name="date"/>
                    <field name="company_id"/>
                    <field name="group_id"/>
                </group>
            </group>
        </field>
    </record>

    <record id="action_kinesis_athletics_evaluation_detail" model="ir.actions.act_window">
        <field name="name">Graph Details</field>
        <field name="res_model">kinesis_athletics.evaluation_detail</field>
        <field name="view_mode">kanban,tree</field>
        <field name="view_id" ref="view_kinesis_athletics_evaluation_detail_kanban"/>
    </record>

    </data>
</openerp>
